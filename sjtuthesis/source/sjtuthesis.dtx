  {
    \int_compare:nTF { \g_@@_thesis_lang_int = 1 }
      { \LoadClassWithOptions { sjtuthesis-postgraduate-zh } }
      { \LoadClassWithOptions { sjtuthesis-postgraduate-en } }
  }
  {
